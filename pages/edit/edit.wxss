.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.form-group {
  margin-bottom: 20rpx;
}

input {
  width: 100%;
  height: 40rpx;
  border: 1rpx solid #ccc;
  border-radius: 4rpx;
  padding: 0 10rpx;
}

.submit-btn {
  margin-top: 20rpx;
  background-color: #1890ff;
  color: #fff;
  border: none;
  border-radius: 4rpx;
  padding: 8rpx 16rpx;
}
