
/* 用户信息 */
.user{
  margin-left: 30rpx;
  width:300rpx; 
  margin-top: 10rpx;
  font-size: 20rpx;
  border: 2rpx solid #000;
  border-radius: 100rpx;
  padding-left: 10rpx;
}
/* 历史记录 */
.historyc{
  border: 2rpx solid #1296db;
  margin-left: 30rpx; 
  height: 246rpx; 
  width: 90%;
  /* margin-bottom: 40rpx; */
}
.historyc1{
  border: 2rpx solid #1296db;
  margin-left: 30rpx; 
  height: 246rpx; 
  width: 90%;
  margin-bottom: 120rpx;
}
.namec{
  padding: 10rpx 0rpx 0rpx 10rpx; 
  font-size: 20rpx;
  height: 36rpx;
  box-sizing: border-box;
}
.sender{
  font-size: 20rpx;
  height: 100rpx;
  /* width: 100rpx; */
  flex: 1;
  text-align: center; 
  line-height: 50rpx;
  margin: 10rpx 10rpx 30rpx 5rpx;
}
.container1 {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  /* width: 250rpx; */
  flex: 2;
  height: 100rpx;
  margin-top: 10rpx;
}

.rectangle {
  width: 200rpx;
  height: 100rpx;
  background-color: #ccc;
  float: left;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
}

.triangle {
  width: 0;
  height: 0;
  border-top: 50rpx solid transparent;
  border-bottom: 50rpx solid transparent;
  border-left: 50rpx solid #ccc;
  float: left;
}
.getter{
  font-size: 20rpx;
  height: 100rpx;
  /* width: 100rpx; */
  flex: 1;
  text-align: center; 
  line-height: 50rpx; 
  margin: 10rpx 15rpx 0rpx 20rpx;
}
/* 轮播图 */
.swiper-container{
  width: 100%;
}
.item{
  height: 150px;
}
.item image{
  width: 100%;
  height: 100%;
}

